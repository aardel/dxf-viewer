{
    "name": "dxf-viewer",
    "version": "1.0.0",
    "description": "JavaScript DXF file viewer with Electron desktop app",
    "main": "src/index.js",
    "author": "Artyom Lebedev<artyom.lebedev@gmail.com>",
    "license": "MPL-2.0",
    "repository": "https://github.com/vagran/dxf-viewer",
    "type": "module",
    "keywords": [
        "dxf",
        "viewer",
        "javascript",
        "webgl",
        "html5",
        "cad",
        "electron",
        "desktop"
    ],
    "scripts": {
        "electron": "electron electron/main/main.cjs",
        "electron:dev": "electron electron/main/main.cjs --dev",
        "electron:build": "electron-builder",
        "electron:build-win": "electron-builder --win",
        "electron:build-mac": "electron-builder --mac",
        "electron:build-linux": "electron-builder --linux",
        "serve": "python3 -m http.server 8001",
        "serve:node": "npx http-server -p 8001"
    },
    "files": [
        "src",
        "electron",
        "assets",
        "README.md",
        "LICENSE",
        "CONTRIBUTORS",
        "CONTRIBUTING.md"
    ],
    "dependencies": {
        "loglevel": "^1.9.1",
        "opentype.js": "^1.3.4",
        "three": "^0.161.0",
        "earcut": "^3.0.0"
    },
    "devDependencies": {
        "@types/three": "^0.161.2",
        "electron": "^28.0.0",
        "electron-builder": "^24.0.0"
    },
    "build": {
        "appId": "com.example.dxf-viewer",
        "productName": "DXF Viewer",
        "directories": {
            "output": "dist"
        },
        "files": [
            "src/**/*",
            "electron/**/*",
            "assets/**/*",
            "node_modules/**/*"
        ],
        "mac": {
            "category": "public.app-category.graphics-design",
            "icon": "assets/icon.png"
        },
        "win": {
            "target": "nsis",
            "icon": "assets/icon.png"
        },
        "linux": {
            "target": "AppImage",
            "icon": "assets/icon.png"
        }
    }
}
