{
    "name": "lasercomb-studio",
    "version": "1.0.0",
    "description": "Lasercomb Studio V1.0.0 - Professional Multi-Format CAD Drawing Viewer",
    "main": "electron/main/main.cjs",
    "browser": {
        "loglevel": "./loglevel-wrapper.js"
    },
    "author": "Aaron Delia <aaron@lasercomb.com>",
    "license": "MPL-2.0",
    "repository": "https://github.com/aardel/dxf2Laser",
    "keywords": [
        "dxf",
        "viewer",
        "cad",
        "electron",
        "desktop",
        "engineering",
        "autocad",
        "lasercomb"
    ],
    "scripts": {
        "start": "electron electron/main/main.cjs",
        "dev": "electron electron/main/main.cjs --dev",
        "prebuild": "node build-script.js",
        "build": "electron-builder",
        "build:win": "electron-builder --win",
        "build:mac": "electron-builder --mac",
        "build:linux": "electron-builder --linux",
        "dist": "electron-builder --publish=never"
    },
    "files": [
        "src",
        "electron",
        "assets",
        "README.md"
    ],
    "dependencies": {
        "@xmldom/xmldom": "^0.9.8",
        "chokidar": "^4.0.3",
        "earcut": "^3.0.0",
        "electron-store": "^10.1.0",
        "fast-xml-parser": "^5.2.5",
        "loglevel": "^1.9.1",
        "node-pty": "^1.0.0",
        "opentype.js": "^1.3.4",
        "three": "^0.161.0"
    },
    "devDependencies": {
        "@types/three": "^0.161.2",
        "electron": "^28.0.0",
        "electron-builder": "^24.0.0"
    },
    "build": {
        "appId": "com.lasercomb.studio",
        "productName": "Lasercomb Studio V1.0.0",
        "directories": {
            "output": "dist"
        },
        "files": [
            "src/**/*",
            "electron/**/*",
            "assets/**/*",
            "CONFIG/**/*",
            "node_modules/**/*",
            "loglevel-wrapper.js"
        ],
        "extraResources": [
            {
                "from": "src",
                "to": "src"
            },
            {
                "from": "CONFIG",
                "to": "CONFIG"
            }
        ],
        "mac": {
            "icon": "assets/app-icons/icon.icns",
            "category": "public.app-category.graphics-design"
        },
        "win": {
            "icon": "assets/app-icons/icon_256x256.png",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ]
        },
        "linux": {
            "icon": "assets/app-icons/icon_512x512.png",
            "target": "AppImage"
        }
    }
}
